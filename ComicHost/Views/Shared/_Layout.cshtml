@using ComicHost.Utils;

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jquerytag")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/jquerytag")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")

<script type="text/javascript">    var switchTo5x = false;</script>
<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
<script type="text/javascript">    stLight.options({ publisher: "2b02b9bc-fda9-4437-abec-b4f724bc3bd4", doNotHash: false, doNotCopy: false, hashAddressBar: false });</script>
    </head>
    <body>
        <header>
            <div class="content-wrapper" style="clear:both;">
                <div class="float-left">
                <a href="/"><img style="vertical-align:top" align="left" src="../../Images/comics/face13.png" /></a>
                    <span class="site-title">
                    @Html.ActionLink(Utils.Title, "Index", "Comic", new { id = '/' }, null)</span>
                    <br>Everything is <span class="tag">tagged.</span>Search tags or<span class="tag">@Html.ActionLink("create your own", "Create", "Comic", new { id = "/", tags = "/" }, null)</span>
                    <br clear="all" />
            </div>
                    <div class="float-right">
                        <script type="text/javascript"><!--
                            google_ad_client = "ca-pub-9900706080516157";
                            /* Top Banner */
                            google_ad_slot = "1774509941";
                            google_ad_width = 468;
                            google_ad_height = 60;
                        //-->
                        </script>
                        <script type="text/javascript"
                        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
                        </script>
                        <br />
<a href="https://twitter.com/myinstantmeme" class="twitter-follow-button" data-show-count="false" data-lang="en" data-size="large">Follow @@myinstantmeme</a>
<script>    !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>            
<iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2FMyInstantMeme&amp;width=292&amp;height=62&amp;show_faces=false&amp;colorscheme=light&amp;stream=false&amp;border_color&amp;header=false&amp;appId=7567492355" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:292px; height:62px;" allowTransparency="true"></iframe>
                    </div>
                </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - @Utils.Title</p>
                </div>
                <div class="float-right">
<a href="https://twitter.com/myinstantmeme" class="twitter-follow-button" data-show-count="false" data-lang="en" data-size="large">Follow @@myinstantmeme</a>
<script>    !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>
                </div>
            </div>
        </footer>
    </body>
</html>
