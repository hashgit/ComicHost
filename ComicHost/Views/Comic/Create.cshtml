    <div id="allcontrols" class="float-right maincontrol">
        <div id="controls" class="container-border control-style">
        </div>

        <div id="commands" class="container-border command-style">
            <button id="remove-selected">Remove selected element from canvas</button><br />
            <button class="btn btn-danger clear">Remove all elements from canvas</button><br />
            <button class="rect">Add a rectangle</button><br />
            <button type="button" class="triangle">Add a triangle</button><br />
            <button type="button" class="circle">Add a circle</button><br />
            <button id="drawing-mode" class="btn btn-info">Enter drawing mode</button><br />
            
            <button id="rasterize" class="btn btn-success">Create it now</button><br />
        </div>

        <div id="imagediv" class="container-border command-style">
            <span>Enter a URL of an image</span>
            <input type="text" id="onlinefileselector" class="localfile" value="http://" title="URL of online image" /> <br />
            <button id="addimage" class="btn">Add image to canvas</button>
        </div>

        <div style="display: none;" class="control-style container-border" id="drawing-mode-options">
            Mode:
            <select id="drawing-mode-selector">
                <option>Pencil</option>
                <option>Circles</option>
            </select><br />
            <div>
            <label class="sidebyside">Line width</label>
            <input class="sidebyside" type="range" value="30" min="0" max="90" id="drawing-line-width" /><br />
            </div>
            <div>
            <label class="sidebyside">Line color</label>
            <input class="sidebyside" type="color" value="#005E7A" id="drawing-color" /><br />
            </div>
        </div>

            <div id="text-controls" class="control-style container-border">
                  <label for="font-family" style="display:inline-block">Font family</label>
                  <select id="font-family" disabled="">
                    <option>Arial</option>
                    <option selected="">Helvetica</option>
                    <option>Myriad Pro</option>
                    <option>Delicious</option>
                    <option>Verdana</option>
                    <option>Georgia</option>
                    <option>Courier</option>
                    <option>Comic Sans MS</option>
                    <option>Impact</option>
                    <option>Monaco</option>
                    <option>Optima</option>
                    <option>Hoefler Text</option>
                    <option>Plaster</option>
                    <option>Engagement</option>
                  </select>
                  <br />
                  <label for="text-align" style="display:inline-block">Text align</label>
                  <select id="text-align" disabled="">
                    <option>Left</option>
                    <option>Center</option>
                    <option>Right</option>
                    <option>Justify</option>
                  </select>
                  <div>
                  <input class="sidebyside" type="color" value="" id="text-bg-color" size="10" title="Background">
                  <input class="sidebyside" type="color" value="" id="text-lines-bg-color" size="10" title="Background text">
                  <input class="sidebyside" type="color" value="" id="text-stroke-color" title="Text stroke">
                  </div>

                  <textarea id="usertext">hello world</textarea><br />
                  <button class="btn" id="add-text">Add text</button>
            </div>

<div>
<script type="text/javascript"><!--
    google_ad_client = "ca-pub-9900706080516157";
