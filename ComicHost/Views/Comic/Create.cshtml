        </div>
        </div>
          <script src="~/Scripts/fabric-0.9.15.min.js" type="text/javascript"></script>
          <script src="~/Scripts/kitchensink.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $.get('/comic/mostused', function (data) {
            $("#mostusedimages").empty();

            for (var i = 0; i < data.length; i++) {
                var e = $("<img src=/images/comics/" + data[i] + " width=90 height=90 class=usedimage title='Click to add' />");
                $(document).on('click', e, function () {
                    fabric.Image.fromURL($(this).attr("src"), function (image) {
                        image.set({
                            left: 150,
                            top: 150
                        });
                        canvas.add(image);
                    });
                });
                $("#mostusedimages").append(e);
            }

            $(".usedimage").click(function () {
                fabric.Image.fromURL($(this).attr("src"), function (image) {
                    image.set({
                        left: 150,
                        top: 150
                    });
                    canvas.add(image);
                });
            });
        });
    });

    $(function () {
        $('#tags').tagsInput({
            autocomplete_url: '/comic/Complete',
            height: '90px',
            width: '490px'
        });
    });

</script>
    </section>
}